<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             BindingContext="{Binding Main, Source={StaticResource Locator}}"
             x:Class="CHEJ_GetServicesVzLa.Views.MyProfilePage"
             Title="My Profile">
    
    <ContentPage.Content>

        <ScrollView BindingContext="{Binding MyProfile}"
                    Padding="10,20">
            
            <StackLayout>

                <StackLayout VerticalOptions="CenterAndExpand">

                    <Image Source="UserSettingsLogo"
                           HeightRequest="100"
                           VerticalOptions="CenterAndExpand"/>

                </StackLayout>
               
                <Grid>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>
                    
                    <Label Grid.Column="0" 
                           Grid.Row="0" 
                           Text="Firts Name:"
                           VerticalOptions="Center"/>
                    <Entry Grid.Column="1"
                           Grid.Row="0"
                           IsEnabled="{Binding IsEnabled}"
                           Placeholder="Shows firts name"
                           Text="{Binding FirstName, Mode=TwoWay}"
                           VerticalOptions="Center"/>

                    <Label Grid.Column="0" 
                           Grid.Row="1" 
                           Text="Last Name:"
                           VerticalOptions="Center"/>
                    <Entry Grid.Column="1"
                           Grid.Row="1"
                           IsEnabled="{Binding IsEnabled}"
                           Placeholder="Shows last name"
                           Text="{Binding LastName, Mode=TwoWay}"
                           VerticalOptions="Center"/>

                    <Label Grid.Column="0" 
                           Grid.Row="2" 
                           Text="Telephone:"
                           VerticalOptions="Center"/>
                    <Entry Grid.Column="1"
                           Grid.Row="2"
                           IsEnabled="{Binding IsEnabled}"
                           Placeholder="Shows telephone"
                           Text="{Binding Telephone, Mode=TwoWay}"
                           VerticalOptions="Center"/>

                    <Label Grid.Column="0" 
                           Grid.Row="3" 
                           Text="Edit Email:"
                           VerticalOptions="Center"/>
                    <Image Grid.Column="1"
                           Grid.Row="3"
                           HeightRequest="50"
                           HorizontalOptions="EndAndExpand"
                           Source="ic_chevron_right"
                           VerticalOptions="Center">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EditEmailCommand}"/>
                        </Image.GestureRecognizers>
                    </Image>

                    <Label Grid.Column="0" 
                           Grid.Row="4" 
                           Text="Edit Password:"
                           VerticalOptions="Center"/>
                    <Image Grid.Column="1"
                           Grid.Row="4"
                           HeightRequest="50"
                           HorizontalOptions="EndAndExpand"
                           Source="ic_chevron_right"
                           VerticalOptions="Center">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding EditPasswordCommand}"/>
                        </Image.GestureRecognizers>
                    </Image>

                </Grid>

                <Image HeightRequest="80"
                       Source="{Binding ImageSource, Mode=TwoWay}"
                       WidthRequest="140"
                       VerticalOptions="CenterAndExpand">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding EditImageCommand}"/>
                    </Image.GestureRecognizers>
                </Image>
                    
                <Label FontSize="Small" 
                        HorizontalOptions="Center"
                        Text="Clic on the image to change the photo"
                        VerticalOptions="CenterAndExpand"/>

                <ActivityIndicator IsRunning="{Binding IsRunning}" 
                                   VerticalOptions="CenterAndExpand"/>
                
                <Label FontSize="Small"
                       HorizontalTextAlignment="Center"
                       Text="{Binding MessageLabel}"
                       TextColor="Green"
                       VerticalOptions="CenterAndExpand"/>

                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="Center"
                             VerticalOptions="EndAndExpand">
                    
                    <Button BackgroundColor="Gray"
                            Command="{Binding SaveCommand}"
                            HorizontalOptions="FillAndExpand"
                            IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                            Text="Save"
                            TextColor="White"
                            WidthRequest="90"/>

                    <Button BackgroundColor="Gray"
                            Command="{Binding GoBackCommand}"
                            HorizontalOptions="FillAndExpand"
                            IsEnabled="{Binding IsEnabled, Mode=TwoWay}"
                            Text="Back"
                            TextColor="White"
                            WidthRequest="90"/>

                </StackLayout>

            </StackLayout>

        </ScrollView>
        
    </ContentPage.Content>
    
</ContentPage>